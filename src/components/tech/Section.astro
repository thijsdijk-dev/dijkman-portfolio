---
const { id, title } = Astro.props;
---

<section id={id} class="section">
  <h2>{title}</h2>
  <div class="content">
    <slot />
  </div>
</section>

<style>
  .section{ margin-top: 22px; }
  h2{
    margin: 0 0 12px 0;
    font-size: 18px;
    letter-spacing: .01em;
  }
  .content{ display: grid; gap: 12px; }
</style>
