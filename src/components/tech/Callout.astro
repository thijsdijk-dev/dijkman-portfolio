---
const { kind = "info", title = "" } = Astro.props;

const tone = {
  success: "border-color: rgba(52,211,153,.45); background: rgba(52,211,153,.06);",
  info: "border-color: rgba(125,211,252,.45); background: rgba(125,211,252,.06);",
  warning: "border-color: rgba(251,191,36,.45); background: rgba(251,191,36,.06);",
  danger: "border-color: rgba(251,113,133,.45); background: rgba(251,113,133,.06);",
}[kind] || "border-color: rgba(125,211,252,.45); background: rgba(125,211,252,.06);";
---

<div class="callout" style={tone}>
  {title && <div class="title">{title}</div>}
  <div class="body"><slot /></div>
</div>

<style>
  .callout{
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 14px 16px;
  }
  .title{ font-weight: 800; margin-bottom: 6px; }
  .body{ color: var(--muted); }
</style>
