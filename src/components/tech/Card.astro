---
const { title = "" } = Astro.props;
---

<div class="card">
  {title && <h3>{title}</h3>}
  <div class="body">
    <slot />
  </div>
</div>

<style>
  .card{
    border:1px solid var(--border);
    border-radius: var(--radius);
    background: var(--panel);
    padding: 16px;
    box-shadow: var(--shadow);
  }
  h3{ margin: 0 0 8px 0; font-size: 15px; }
  .body{ color: var(--text); }
</style>
