---
const { items = [] } = Astro.props;
---

<div class="roadmap">
  {items.map((i) => (
    <div class={`row ${i.done ? "done" : ""}`}>
      <span class="dot"></span>
      <span class="text">{i.text}</span>
      <span class="state">{i.done ? "Done" : "Next"}</span>
    </div>
  ))}
</div>

<style>
  .roadmap{
    border:1px solid var(--border);
    border-radius: var(--radius);
    background: var(--panel);
    padding: 10px;
  }
  .row{
    display:flex;
    align-items:center;
    gap:10px;
    padding: 10px 10px;
    border-radius: 14px;
  }
  .row:hover{ background: rgba(255,255,255,.03); }

  .dot{
    width: 10px; height: 10px; border-radius: 999px;
    background: var(--warn);
  }
  .done .dot{ background: var(--ok); }

  .text{ flex: 1; color: var(--muted); }
  .state{
    font-size: 12px;
    border:1px solid rgba(255,255,255,.12);
    border-radius: 999px;
    padding: 4px 8px;
    opacity: .85;
  }
</style>
