---
const { items = [] } = Astro.props;
---

<div class="card">
  <h3 style="margin:0 0 10px">Roadmap</h3>
  <ul class="list">
    {items.map((it) => (
      <li>
        <span class={`dot ${it.done ? "done" : ""}`}></span>
        <span class={it.done ? "muted" : ""}>{it.text}</span>
      </li>
    ))}
  </ul>
</div>

<style>
  .list{ list-style:none; padding:0; margin:0; display:flex; flex-direction:column; gap: 10px; }
  li{ display:flex; align-items:flex-start; gap: 10px; }
  .dot{
    width: 10px; height: 10px; border-radius: 999px;
    border: 2px solid var(--border);
    margin-top: 4px;
  }
  .dot.done{ border-color: var(--success); background: rgba(34,197,94,.25); }
</style>
