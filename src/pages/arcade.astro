---
import Base from "../layouts/Base.astro";

const linkedin = "https://www.linkedin.com/in/thijsdijkman/";

// self-hosted endpoints
const snes9xUrl = "/retroarch/snes/";

const highlights = [
  {
    title: "E√©n game, vaste setup",
    text: "Deze server draait alleen Super Instinct via Snes9x. Geen losse gamebibliotheek of extra titels.",
  },
  {
    title: "Autoplay eerst proberen",
    text: "De launcher probeert automatisch Super Instinct te starten met Snes9x en toont direct de fallback-stappen als dit niet lukt.",
  },
  {
    title: "Copyright veilig",
    text: "Alle andere games zijn verwijderd zodat alleen Super Instinct vanaf de server gestart kan worden.",
  },
];

const quickSteps = [
  "Klik op ‚ÄòStart Super Instinct‚Äô.",
  "Wacht tot de launcher je automatisch doorstuurt naar Snes9x.",
  "Start de game niet vanzelf? Volg dan de handmatige stappen hieronder.",
];

const menuLinks = [
  { href: "/cv", label: "üìÑ CV + QR" },
  { href: "/homelab", label: "üõ†Ô∏è Homelab" },
  { href: "/services", label: "üì¶ Services" },
  { href: "/monitoring", label: "üìä Monitoring" },
  { href: "/arcade", label: "üïπÔ∏è Arcade: Snes9x" },
  { href: linkedin, label: "in LinkedIn", external: true },
];

const launchSteps = [
  "Open de emulator op /retroarch/ (of /snes9x/ als die route bij jou bestaat).",
  "Kies ‚ÄòLoad ROM‚Äô of ‚ÄòOpen File‚Äô.",
  "Open het bestand /retroarch/roms/superinstinct.sfc.",
  "Start of resume de emulatie om Super Instinct te spelen.",
];
---

<Base
  title="Arcade (Snes9x)"
  description="Start Super Instinct direct vanuit de arcade-pagina."
>
  <section class="hero">
    <div class="tag-row">
      <span class="tag">üïπÔ∏è Arcade</span>
      <span class="tag">Snes9x</span>
    </div>

    <h1>Arcade</h1>
    <p class="muted lead">
      Op deze server draait alleen <strong>Super Instinct</strong>. Andere games zijn verwijderd om
      copyright-risico te voorkomen.
    </p>

    <div class="btns">
      <a class="btn" href={snes9xUrl}>Start Super Instinct</a>
      <a class="btn" href="/">Terug naar home</a>
    </div>

    <p class="muted footnote">
      Tip: als audio niet meteen werkt, klik √©√©n keer in het emulator-venster en check tab-audio permissies.
    </p>
  </section>

  <section class="grid">
    {highlights.map((item) => (
      <article class="card">
        <h2>{item.title}</h2>
        <p class="muted">{item.text}</p>
      </article>
    ))}
  </section>

  <section class="card">
    <h2>Snelle start</h2>
    <ol>
      {quickSteps.map((step) => (
        <li>{step}</li>
      ))}
    </ol>

    <p class="callout">
      Er is bewust geen publieke uploadfunctie meer actief. De server is beperkt tot √©√©n game:
      <strong>Super Instinct</strong>.
    </p>
  </section>

  <section class="card">
    <h2>Menu</h2>
    <div class="btns">
      {menuLinks.map((item) => (
        <a
          class="btn"
          href={item.href}
          target={item.external ? "_blank" : undefined}
          rel={item.external ? "noreferrer" : undefined}
        >
          {item.label}
        </a>
      ))}
    </div>
  </section>

  <section class="card">
    <h2>Handmatig opstarten (als autostart faalt)</h2>
    <p class="muted">
      Volg deze stappen op de Snes9x-interface om alsnog de vaste game te starten.
    </p>
    <ol>
      {launchSteps.map((step) => (
        <li>{step}</li>
      ))}
    </ol>

    <p class="callout">
      Alleen <code>/retroarch/roms/superinstinct.sfc</code> hoort op deze server te staan.
    </p>
  </section>
</Base>

<style>
  /* match jouw homepage stijl: simpel, strak, dark cards */
  .hero {
    padding: 28px;
    border: 1px solid #222;
    border-radius: 18px;
    background: #101018;
    color: #f5f7ff;
    margin-top: 18px;
  }

  .tag-row {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 10px;
  }

  .tag {
    display: inline-block;
    padding: 4px 10px;
    border: 1px solid #444;
    border-radius: 999px;
    font-size: 12px;
    opacity: 0.9;
  }

  h1 {
    margin: 0 0 8px;
    font-size: 2rem;
    letter-spacing: -0.02em;
  }

  h2 {
    margin: 0 0 10px;
    font-size: 1.1rem;
    letter-spacing: -0.01em;
  }

  .lead {
    margin: 0;
    max-width: 70ch;
    line-height: 1.65;
  }

  .muted {
    color: #c6ccda;
  }

  .btns {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 14px;
  }

  .btn {
    padding: 10px 12px;
    border: 1px solid #333;
    border-radius: 10px;
    text-decoration: none;
    color: #f5f7ff;
    background: transparent;
  }

  .btn:hover {
    border-color: #777;
  }

  .grid {
    display: grid;
    gap: 14px;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    margin-top: 16px;
  }

  .card {
    padding: 16px;
    border: 1px solid #333;
    border-radius: 14px;
    background: #101018;
    color: #f5f7ff;
    margin-top: 16px;
  }

  .card h2 + p {
    margin: 0;
    line-height: 1.6;
  }

  ol {
    margin: 0;
    padding-left: 20px;
    display: grid;
    gap: 8px;
    line-height: 1.55;
  }

  .footnote {
    margin: 14px 0 0;
    font-size: 14px;
  }

  code {
    background: #111;
    color: #eee;
    padding: 2px 6px;
    border-radius: 6px;
  }

  .callout {
    margin-top: 14px;
    padding: 12px 14px;
    border: 1px solid #2a2a2a;
    border-radius: 12px;
    background: #0f0f16;
    color: #dce2f1;
  }
</style>
