---
import Base from "../layouts/Base.astro";

const solarusEmbedUrl = "https://www.solarus-games.org/";
const zeldaFanGameEmbedUrl =
  "https://archive.org/embed/softwarelibrary_nes?ui=embed&playlist=1&start=Legend_of_Zelda_-_Outlands_The_1996";
---

<Base
  title="Arcade: Solarus & Zelda fan game"
  description="Draai Solarus en een Zelda fan game direct op de arcadepagina."
>
  <section class="card hero">
    <p class="badge">Arcade collectie</p>
    <h1>Solarus + Zelda fan game</h1>
    <p>
      Op deze pagina draaien nu twee embedded items: <strong>Solarus</strong> en een
      <strong>Zelda fan game</strong>. Beide zijn direct op de pagina ingesloten.
    </p>
    <p class="note">Tip: klik eerst in het spelvenster om toetsenbordbesturing te activeren.</p>
  </section>

  <section class="game-grid">
    <article class="card game-card">
      <h2>Solarus</h2>
      <div class="game-wrap">
        <iframe
          title="Solarus website"
          src={solarusEmbedUrl}
          frameborder="0"
          webkitallowfullscreen="true"
          mozallowfullscreen="true"
          allowfullscreen
        ></iframe>
      </div>
      <p class="note">Bron: officiÃ«le Solarus website.</p>
    </article>

    <article class="card game-card">
      <h2>Zelda fan game (Outlands)</h2>
      <div class="game-wrap">
        <iframe
          title="Zelda fan game emulator"
          src={zeldaFanGameEmbedUrl}
          frameborder="0"
          webkitallowfullscreen="true"
          mozallowfullscreen="true"
          allowfullscreen
        ></iframe>
      </div>
      <p class="note">Bron: Internet Archive NES fan project / ROM-hack collectie.</p>
    </article>
  </section>
</Base>

<style>
  .card {
    background: #101018;
    border: 1px solid #2d2d3c;
    border-radius: 16px;
    padding: 20px;
    margin-top: 18px;
  }

  .badge {
    display: inline-block;
    font-size: 12px;
    border: 1px solid #4f4f6a;
    border-radius: 999px;
    padding: 4px 10px;
  }

  .hero h1 {
    margin: 10px 0;
  }

  .game-grid {
    display: grid;
    gap: 18px;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  }

  .game-card {
    display: grid;
    gap: 12px;
  }

  .game-wrap {
    aspect-ratio: 16 / 10;
    width: 100%;
    border: 1px solid #2a2a38;
    border-radius: 12px;
    overflow: hidden;
    background: #0a0a0f;
  }

  .game-wrap iframe {
    width: 100%;
    height: 100%;
    border: 0;
  }

  .note {
    opacity: 0.84;
  }
</style>
